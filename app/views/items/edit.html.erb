<h4>Редактирование товара</h4>
<br />
<%= form_with model: @item, local: true do |form| %>
  <div class="field">
    <p>
      <td><%= @item.number %></td>
    </p>
  </div>

  <div class="field">
    <p>
      <td><%= @item.description %></td>
    </p>
  </div>

  <div class="field">
    <p>
      <%= form.text_field :minimal_quantity, placeholder: "Введите минимальный запас" %>
    </p>
  </div>
  
  <div class="actions">
    <p>
      <%= form.submit "Создать товар" %>
    </p>
  </div>
<% end %>