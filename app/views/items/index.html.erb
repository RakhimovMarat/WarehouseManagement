<h4>Остатки товаров на складах</h4>
<br />
<table class="table">
  <thead>
    <tr>
      <th>Номер</th>
      <th>Наименование</th>
      <th>Минимальный запас</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.number, edit_item_path(item) %></td>
        <td><%= item.description %></td>
        <td><%= item.minimal_quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>