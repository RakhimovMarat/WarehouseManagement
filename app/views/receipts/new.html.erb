<h4>Поступление товара</h4>
<br />
<%= form_with model: @receipt, local: true do |form| %>
  <div class="field">
    <p>
      <%= form.collection_select :item_id, @items, :id, :number, prompt: "Введите номер товара" %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= form.collection_select :warehouse_id, @warehouses, :id, :name, { prompt: "Введите склад" }, { id: "warehouse-select" } %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= form.select :address_id, [], { prompt: "Сначала выберите склад" }, { id: "address-select" } %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= form.number_field :quantity %>
    </p>
  </div>
  
  <div class="actions">
    <p>
      <%= form.submit "Подтвердить" %>
    </p>
  </div>
<% end %>
