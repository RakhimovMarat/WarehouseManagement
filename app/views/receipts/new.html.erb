<h4>Поступление товара</h4>
<br />
<%= form_with model: @receipt, local: true do |form| %>
  <div class="field">
    <p>
      <%= form.text_field :number, placeholder: "Введите номер товара" %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= form.text_field :name, placeholder: "Введите адрес" %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= form.number_field :quantity, min: 1, placeholder: "Введите количество" %>
    </p>
  </div>
  
  <div class="actions">
    <p>
      <%= form.submit "Подтвердить" %>
    </p>
  </div>
<% end %>
